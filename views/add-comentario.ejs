<%- include ('partial/header.ejs') %>
<section class="hero is-warning is-bold">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
            <h1 class="title is-2 m-4 mt-6 ml-5">Agregar comentarios al evento</h1>
        </h1>
        <h2 id="evt" class="subtitle mt-1 ml-5">
            <%= name %>
        </h2>
      </div>
    </div>
  </section>
  <div class="container is-flex is-flex-wrap-wrap is-justify-content-center">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
            <form class="is-fullwidth" method="post" action="/addcoment/<%= eventId%>/<%= name%>" enctype="multipart/form-data">
                <div class="field is-fullwidth p-5">
                    <label class="label title is-4 mt-5 mb-5"> Agregar un comentario al evento</label>
                    <div class="field is-grouped">
                        <p class="control is-expanded">
                          <textarea id="texto_comentario" class="textarea" name="texto_comentario" ></textarea>
                        </p>
                        <p class="control">
                          <input type="submit" value="Comentar"class="button is-info">
                        </p>
                      </div>
                </div>
            </form>
            <div id="validate" class="field is-fullwidth m-5">

            </div>
            <% if (coment.length > 0) { %>
                <section class="hero is-info is-fullwidth">
                    <div class="hero-body">
                      <div class="container">
                        <h1 class="title">
                            Comentarios
                        </h1>
                      </div>
                    </div>
                  </section>
                <div class="is-fullwidth m-5">

                     <% coment.forEach((s, index) => { %>
                        <h2 class="title is-5 p-2">Socio Anonimo</h2>
                        <div class="field is-grouped">
                            <p class="control is-expanded">
                              <textarea id="ev_inp_sorter" class="textarea" readonly><%= s.texto_comentario %></textarea>
                            </p>
                            <p class="control">
                                <a class="button is-danger ml-5 mt-2 mb-2" href="/deletecoment/<%= s.id_comentario %>">
                                    Borrar
                                </a>
                            </p>
                          </div>
                     <% }) %>

                </div>
            <% ;} else { %>
                <p class="has-text-centered m-5">Aun no hay comentario sobre el evento</p>
            <% ;} %>
    </div>
    <div class="field pl-5">
        <div class="control">
            <a class="button is-danger ml-5 mt-2 mb-2" href="/eventos">
                Volver
            </a>
        </div>
    </div>
    
</div>
