<%- include ('partial/header.ejs') %>
<section class="hero is-warning">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
            <h1 class="title is-2 m-4 mt-6 ml-5">Editar informacion del negocio</h1>
        </h1>
        <h2 class="subtitle ml-5">
            <%= comp.nombre_evento %>
        </h2>
      </div>
    </div>
  </section>
<div class="container m-5">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (comp) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">Nombre</label>
            </div>
            <div class="field-body is-expanded">
                <div class="control is-fullwidth">
                    <input class="input" type="text" name="nombre_compania" id="nombre_compania" value="<%= comp.nombre_compania %>">
                </div>
            </div>
        </div>
        <div class="field is-horizontal is-expanded">
            <div class="field-label is-normal">
                <label class="label">Direccion</label>
            </div>
            <div class="field-body is-expanded">
                <div class="control is-fullwidth">
                    <input class="input" type="text" name="direccion_compania" id="direccion_compania" value="<%= comp.direccion_compania %>" required>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">Tipo</label>
            </div>
            <div class="field-body">
                <div class="control">
                    <div class="select is-info">
                        <select id="tipo_compania" name="tipo_compania" required>
                            <option value="<%= comp.id_tipo_compania %>" selected ><%= comp.codigo_tipo%> - <%= comp.nombre_tipo%></option>
                            <% tipos.forEach((t , index) => { %>
                                <option value="<%= t.id_tipo%>"><%= t.codigo_tipo%> - <%= t.nombre_tipo%></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label is-normal pt-0">
                <label>
                <a class="button is-success" href="/negocios">
                    Volver
                </a>
            </label>
            </div>
            <div class="field-body is-normal">
                <div class="control">
                    <button type="submit" class="button is-danger">Actualizar</button>
                </div>
            </div>
        </div>
    </form>
        <% ;} else { %>
        <p class="text-center">No hay evento.</p>
        <% ;} %>
</div>
</div>
<script>
document.addEventListener('DOMContentLoaded', () => {

    // Get all "navbar-burger" elements
    const $navbarBurgers = Array.prototype.slice.call(document.querySelectorAll('.navbar-burger'), 0);
  
    // Check if there are any navbar burgers
    if ($navbarBurgers.length > 0) {
  
      // Add a click event on each of them
      $navbarBurgers.forEach( el => {
        el.addEventListener('click', () => {
  
          // Get the target from the "data-target" attribute
          const target = el.dataset.target;
          const $target = document.getElementById(target);
  
          // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
          el.classList.toggle('is-active');
          $target.classList.toggle('is-active');
  
        });
      });
    }
  
  });
</script>
</body>
</html>